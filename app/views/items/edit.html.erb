<div align="center">
  <h2 class="display-3">Shedule</h2>
</div>

<%= form_tag item_path(@item), method: :put do %>
  <table class="table table-striped" border="2">
    <thead class="thead-dark">
        <tr>
          <th colspan="2"><%= @item.day %></th>
        </tr>
    </thead>
    <tr>
      <td>08:00-09:50</td>
      <td> <%= text_field_tag :st1, @item.st1%></td>
    </tr>
    <tr>
      <td>09:50-11:25</td>
      <td> <%= text_field_tag :st2, @item.st2%></td>
    </tr>
    <tr>
      <td>11:40-13:15</td>
      <td> <%= text_field_tag :st3, @item.st3%></td>
    </tr>
    <tr>
      <td>13:45-15:20</td>
      <td> <%= text_field_tag :st4, @item.st4%></td>
    </tr>
    <tr>
      <td>15:35-17:10</td>
      <td> <%= text_field_tag :st5, @item.st5%></td>
    </tr>
    <tr>
      <td>17:25-19:00</td>
      <td> <%= text_field_tag :st6, @item.st6%></td>
    </tr>
  </table>
  <br/>
  <div align="center">
    <table>
      <tr>
        <td><%= submit_tag "Update", class: "btn btn-large btn-primary" %></td>
<% end %>
        <td><%= button_to 'Back', item_path(@item), method: :get, class: "btn btn-large btn-primary" %></td>
      </tr>
    </table>
  </div>